#include <stdio.h>
#include<stdlib.h>
#include<iostream>
using namespace std;




int main()
{ 
    const int NUMERO = 30;
    const int TENTATIVAS = 7;
    int chute;
   
    
   
    cout<< "*******************"<<endl;
    cout<< "*Bem vindo ao jogo*"<<endl;
    cout<< "*******************"<<endl;
    cout<< "qual seu chute"<<endl;
    cin>>chute;
    
    bool acertou = chute == NUMERO;
    bool maior = chute > NUMERO;

    

    if(acertou)
    {
        cout<< "voce acertou o numero secreto"<<endl;    
    }
    else if (maior)
    {
        cout<<"voce chutou um numero maior que o numero secreto"<<endl;
    }
    else
    {
        cout<<"voce chutou um numero menor que o numero secreto"<<endl;
        
        
        
    }
    
   


return 0;

}
